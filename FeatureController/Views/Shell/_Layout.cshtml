<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @FeatureController.Infrastructure.FeatureBundles.Styles(this.ViewContext.RouteData)

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
           
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { })</li>
                    @if (Feature<FeatureController.Features.Foo.FooController>.Is().Enabled)
                    {
                        <li>@Html.ActionLink("Foos?", "Index", "Foo", new { area = "" }, new { })</li>
                    }
                    @if (Feature<FeatureController.Features.Bar.BarController>.Is().Enabled)
                    {
                        <li>@Html.ActionLink("Bar?", "Index", "Bar", new { area = "" }, new { })</li>
                    }

                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { })</li>
                    <li>@Html.ActionLink("!FooBar!", "Index", "FooBar", new { area = "Administration" }, new { })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" id="notifications">
                        <a href="@Url.Action("List","Notification")" class="dropdown-toggle " data-toggle="dropdown">
                            <span >
                                <span class="glyphicon glyphicon-info-sign" style="vertical-align:text-top"></span>
                                <span class="number"></span>
                            </span>
                        </a>                       
                        <ul class="dropdown-menu">
                        
                        </ul>
                    </li>
                </ul>
                    @Html.Partial("_LoginPartial")
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()      
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/jqueryajax",
        "~/bundles/jqueryval",
        "~/bundles/common",
        "~/bundles/signalr"
        )
    @Scripts.Render("~/bundles/bootstrap")
    @FeatureController.Infrastructure.FeatureBundles.Scripts(this.ViewContext.RouteData)

    <script src="@Url.Content("~/signalr/hubs")"></script>

    <script>
        $(function () {
            $.ajaxSetup({
                cache: false
            });

            var notification = $.connection.notificationHub;
            // Create a function that the hub can call to broadcast messages.
            notification.client.sendMessage = function (message,count) {
                //$('#notifications .dropdown-menu').append($('<li></li>').text(message));
                if (count % 3 == 0) {
                    $('#notifications .dropdown-toggle > span').toggleClass('text-danger');
                }
                $('#notifications .number').text(count);
            };

            $.connection.hub.start().done(function () {
               // alert('connected');
            });

            $('#notifications .dropdown-toggle').click(function () {
                $('#notifications .dropdown-menu').load($(this).attr('href'));
            });
        })
    </script>
    @RenderSection("scripts", required: false)
</body>



</html>
